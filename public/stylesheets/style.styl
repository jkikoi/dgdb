@import url('https://fonts.googleapis.com/css?family=Orbitron|Quicksand')

clr-rainbow-1 = rgb(255,192,128)
clr-rainbow-2 = rgb(255,128,192)
clr-rainbow-3 = rgb(192,128,255)
clr-rainbow-4 = rgb(128,192,255)
clr-rainbow-5 = rgb(128,255,192)
clr-rainbow-gradient = linear-gradient(90deg,
  clr-rainbow-1,
  clr-rainbow-2,
  clr-rainbow-3,
  clr-rainbow-4,
  clr-rainbow-5
)

clr-success = rgb(64,255,64)
clr-error = rgb(255,64,64)

clr-bg-sidebar = rgb(20,25,30)
clr-bg-main = lighten(clr-bg-sidebar, 10%)

clr-link = clr-rainbow-4
clr-form = clr-rainbow-5

.small
  font-size 8pt

.subdued
  color alpha(white, 50%)

body
  margin 0
  background black

  font 8pt Verdana
  color white

div.background
  width 100%
  height 100%
  position fixed
  z-index -2

  background url('/images/background.png') repeat
  filter blur(3px)

  animation 60s anim-div-background linear infinite

@keyframes anim-div-background
  0%
    background-position-x 100%
  100%
    background-position-x 0

div.header
  z-index 1
  background alpha(black, 20%)

div.lang-select
  position absolute
  top 5px
  right 5px
  z-index 2

div.sidebar
  width 260px
  min-height 100vh
  position fixed
  top 0
  z-index -1

  background clr-bg-sidebar
  border-right 1px alpha(clr-bg-main, 50%) solid

div.navigation
  width 260px
  position absolute
  top 0

  margin-top 100px

div.navigation p
  padding 0
  font-size 10pt

div.navigation span.label
  display block

  padding-top 3px
  padding-bottom 3px
  padding-left 15px

  background linear-gradient(transparent, alpha(clr-bg-main, 50%))
  border-top 1px alpha(clr-bg-main, 50%) solid

div.navigation a
  display block

  padding-top 5px
  padding-bottom 5px
  padding-left 25px

div.navigation a:hover
  background-color alpha(black, 30%)
  text-decoration none

div.main
  position absolute
  top 100px
  left 262px
  right 20px

div.flex
  display flex
  flex-wrap wrap

div.flex > div
  margin-right 10px

div.flex-4
  flex .4 !important

div.section
  width fit-content
  padding 10px
  margin-bottom 10px

  background alpha(clr-bg-main, 50%)
  box-shadow 5px 5px 0 alpha(black, 15%)

div.fill
  width 100%

div.size-med
  min-width 460px

div.no-padding
  padding 0

div.success
  background alpha(clr-success, 10%)
  border-top 1px alpha(clr-success, 50%) solid

div.success p, div.success pre
  color lighten(clr-success, 50%)

div.error
  background alpha(clr-error, 10%)
  border-top 1px alpha(clr-error, 50%) solid

div.error p, div.error pre
  color lighten(clr-error, 50%)

div.table
  width 100%

div.table-row
  display flex
  border-bottom 1px clr-bg-main dotted

div.table-row:last-child
  border-bottom none

div.table-cell
  flex 1

  padding 5px
  padding-left 10px

div.table-cell p.label
  color alpha(white, 50%)

h1.logo
  width 220px
  padding-bottom 2px
  margin 0
  margin-left 15px

  background clr-rainbow-gradient
  background-size 400% 100%
  background-clip text
  -webkit-background-clip text

  font 50pt Orbitron
  color transparent

  transition 1s background-size
  animation 30s anim-h1-logo ease-in-out infinite alternate

@keyframes anim-h1-logo
  0%
    background-position-x 0
  100%
    background-position-x 100%

h1.logo:hover
  background-size 100% 100%
  cursor pointer

h2
  margin 0
  font 20pt Quicksand

h3.header
  padding 3px
  padding-left 10px
  margin 0

  background linear-gradient(alpha(clr-bg-main, 50%), clr-bg-main)
  border-top 1px clr-bg-main solid

  font 12pt Quicksand

p, pre
  margin 0

span.label
  font-size 8pt

span.required
  color clr-rainbow-2

a
  text-decoration none
  color clr-link

a:hover
  text-decoration underline

a.clr-2
  color clr-rainbow-1

a.clr-3
  color clr-rainbow-3

label
  font-size 7pt
  color alpha(white, 50%)

input
  background alpha(black, 20%)
  border none

  font 8pt Verdana
  color white

input:hover
  background alpha(black, 30%)

input[type='text'], input[type='password']
  width 450px
  padding 3px
  margin-top 3px

input[type='submit']
  min-width 100px
  padding 7px

  border 1px clr-bg-main solid

input[type='submit']:hover
  background alpha(clr-form, 10%)
  border 1px alpha(clr-form, 50%) solid
  box-shadow 0 0 10px alpha(clr-form, 50%)

  cursor pointer

@media (max-width: 767.98px)
  div.header
    padding-top 15px // Prevent page content from being squished up against the ceiling on mobile
    background none

  div.sidebar
    display none

  div.navigation
    width 100%
    position static
    margin-top 0
    margin-bottom 15px

  div.main
    position static

  div.flex
    flex-direction column

  div.flex > div
    margin-right 0

  div.section
    width auto

  div.size-med
    min-width 0

  input[type='text'], input[type='password']
    width 98%

  img
    image-rendering pixelated

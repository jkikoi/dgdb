@import url('https://fonts.googleapis.com/css?family=Orbitron')

clr-rainbow-1 = rgb(255,192,128)
clr-rainbow-2 = rgb(255,128,192)
clr-rainbow-3 = rgb(192,128,255)
clr-rainbow-4 = rgb(128,192,255)
clr-rainbow-5 = rgb(128,255,192)
clr-rainbow-gradient = linear-gradient(90deg,
  clr-rainbow-1,
  clr-rainbow-2,
  clr-rainbow-3,
  clr-rainbow-4,
  clr-rainbow-5
)

clr-bg-sidebar = rgb(20,25,30)
clr-link = clr-rainbow-4

body
  margin 0
  background black
  font 9pt Verdana

div.background
  width 100%
  height 100%
  position fixed
  z-index -1

  background url('/images/background.png') repeat
  filter blur(3px)

  animation 60s anim-div-background linear infinite

@keyframes anim-div-background
  0%
    background-position-x 100%
  100%
    background-position-x 0

div.header
  background alpha(black, 20%)

div.sidebar
  width 260px
  min-height 100vh
  position absolute
  top 0
  z-index -1

  background clr-bg-sidebar
  border-right 1px lighten(clr-bg-sidebar, 5%) solid

div.sidebar p
  margin-top 100px
  font-size 10pt

div.sidebar a
  display block

  padding-top 5px
  padding-bottom 5px
  padding-left 25px

div.sidebar a:hover
  background-color alpha(black, 30%)

h1.logo
  width 220px
  padding-bottom 2px
  margin 0
  margin-left 15px

  background clr-rainbow-gradient
  background-size 400% 100%
  background-clip text
  -webkit-background-clip text

  font 50pt Orbitron
  color transparent

  transition 1s background-size
  animation 30s anim-h1-logo ease-in-out infinite alternate

@keyframes anim-h1-logo
  0%
    background-position-x 0
  100%
    background-position-x 100%

h1.logo:hover
  background-size 100% 100%
  cursor pointer

a
  text-decoration none
  color clr-link

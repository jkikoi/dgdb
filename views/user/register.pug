extends ../layout

block content
  div.section
    p !{__('user/register:description')}

  form(action='/user/register' method='post')
    div.section
      label(for='username') !{__('user/register:label-username')}<br>
      input#username(type='text' name='username' maxlength='20' autocomplete='off')
      
      <br>
      <br>
      label(for='password') !{__('user/register:label-password')}<br>
      input#username(type='password' name='password' maxlength='100' autocomplete='off')

      <br>
      <br>
      label(for='password_confirm') !{__('user/register:label-password_confirm')}<br>
      input#username(type='password' name='password_confirm' maxlength='100' autocomplete='off')

    div.section
      input(type='submit' value=__('user/register:button-register'))
